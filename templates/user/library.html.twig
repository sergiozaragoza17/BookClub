{% extends 'base.html.twig' %}

{% block title %}{{ user.name }}'s Library{% endblock %}

{% block body %}
    <h1 class="mt-3 text-center">{{ user.name }}'s Library</h1>
    <div class="container mt-3 p-4 border rounded shadow-sm">
        <div class="row g-3">
            {% for book in books %}
                <div class="col-2">
                    <div class="card">
                        {% if book.book.coverImage %}
                            <a href="{{ path('book_show', {'id': book.book.id}) }}">
                                <img src="{{ book.book.coverImage }}" class="book-cover card-img-top" alt="{{ book.book.title }}">
                            </a>
                        {% endif %}
                        <div class="card-body p-2">
                            <h6 class="card-title  book-card-title">{{ book.book.title }}</h6>
                            {% set alreadyInLibrary = false %}
                            {% for userBook in app.user.userBooks %}
                                {% if userBook.book.id == book.book.id %}
                                    {% set alreadyInLibrary = true %}
                                {% endif %}
                            {% endfor %}
                            {% if not alreadyInLibrary %}
                                <button class="btn btn-sm btn-primary w-100" data-bs-toggle="modal" data-bs-target="#addToLibraryModal_{{ book.book.id }}">
                                    Add to Library
                                </button>
                                <div class="modal fade" id="addToLibraryModal_{{ book.book.id }}" tabindex="-1" aria-labelledby="addToLibraryModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <form method="post" action="{{ path('book_add_to_library', {'id': book.book.id}) }}" >
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="addToLibraryModalLabel">Have you read the book?</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>

                                                <div class="modal-body">
                                                    <div class="btn-group-vertical w-100" role="group" aria-label="Library status">
                                                        <input type="radio" class="btn-check" name="status" id="statusPending" value="pending" autocomplete="off">
                                                        <label class="btn btn-outline-secondary btn-status w-100 mb-2" for="statusPending">Not yet</label>

                                                        <input type="radio" class="btn-check" name="status" id="statusReading" value="reading" autocomplete="off">
                                                        <label class="btn btn-outline-warning btn-status w-100 mb-2" for="statusReading">Reading</label>

                                                        <input type="radio" class="btn-check" name="status" id="statusFinished" value="finished" autocomplete="off">
                                                        <label class="btn btn-outline-success btn-status w-100" for="statusFinished">Finished</label>
                                                    </div>
                                                </div>

                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-primary">Save</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <form method="post"
                                      action="{{ path('book_remove', {id: book.book.id}) }}"
                                      style="display:inline;"
                                      data-confirm="Are you sure you want to remove this book from your library?"
                                      data-confirm-title="Remove from Library"
                                      data-confirm-action="remove">
                                    <input type="hidden" name="_token" value="{{ csrf_token('remove' ~ book.book.id) }}">
                                    <button class="btn btn-sm btn-warning w-100">Remove from Library</button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="container mb-3 d-flex justify-content-between align-items-center mt-3">
        <button class="btn btn-secondary" onclick="window.history.back();">Back</button>
    </div>
{% endblock %}