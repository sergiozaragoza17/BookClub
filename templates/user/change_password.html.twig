{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <h1 class="mt-3 text-center">Change Password</h1>
    <div class="container mt-3 p-4 border rounded shadow-sm">
        {{ form_start(form) }}
        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.currentPassword) }}</div>
            <div class="col-10">{{ form_widget(form.currentPassword, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.currentPassword.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>
        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.plainPassword) }}</div>
            <div class="col-10">{{ form_widget(form.plainPassword, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.plainPassword.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>
        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.confirmPassword) }}</div>
            <div class="col-10">{{ form_widget(form.confirmPassword, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.confirmPassword.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>
    </div>
    <div class="container mb-3 d-flex justify-content-between align-items-center mt-3">
        <button class="btn btn-success">Save changes</button>
        <a class="btn btn-info" href="{{ path('profile') }}">Back to profile</a>
    </div>
    {{ form_end(form) }}
{% endblock %}