{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <h1>Edit Profile</h1>

    {{ form_start(form) }}

    {{ form_row(form.profileImage) }}
    {{ form_row(form.name) }}
    {{ form_row(form.userName) }}
    {{ form_row(form.email) }}
    {{ form_row(form.bio) }}
    {{ form_row(form.favBook) }}
    {{ form_row(form.currentlyReading) }}
    {{ form_row(form.favGenres) }}
    <hr>

    <button class="btn btn-success mt-3">Save changes</button>
    {{ form_end(form) }}
{% endblock %}