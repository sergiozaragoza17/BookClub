{% extends 'base.html.twig' %}

{% block title %}New Book{% endblock %}

{% block body %}
    <h1 class="mt-3 text-center">Create new Book</h1>
    <div class="container mt-3 p-4 border rounded shadow-sm">
        {{ form_start(form) }}

        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.coverImage) }}</div>
            <div class="col-10">{{ form_widget(form.coverImage, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.coverImage.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>
        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.title) }}</div>
            <div class="col-10">{{ form_widget(form.title, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.title.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>
        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.author) }}</div>
            <div class="col-10">{{ form_widget(form.author, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.author.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>
        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.description) }}</div>
            <div class="col-10">{{ form_widget(form.description, { attr: { class: 'form-control auto-grow' } }) }}</div>
            {% for error in form.description.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>
        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.publishedYear) }}</div>
            <div class="col-10">{{ form_widget(form.publishedYear, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.publishedYear.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>
        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.genre) }}</div>
            <div class="col-10">{{ form_widget(form.genre, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.genre.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>

        {% if not is_granted('ROLE_ADMIN') %}
            <div class="row p-3 text-center">
                <div class="col-2"><label for="user_book_status" class="form-label">Status</label></div>
                <div class="col-10"> <select class="form-select" id="user_book_status" name="user_book_status">
                        <option value="pending">Pending</option>
                        <option value="reading">Reading</option>
                        <option value="finished">Finished</option>
                    </select></div>
            </div>
        {% endif %}
    </div>
    <div class="container d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success">Save changes</button>
        <a class="btn btn-secondary" href="{{ path('book_index') }}">Back to list</a>
    </div>
    {{ form_end(form) }}
{% endblock %}
