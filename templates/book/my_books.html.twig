{% extends 'base.html.twig' %}

{% block title %}My Books{% endblock %}

{% block body %}
    <h1 class="mt-3 text-center">My Books</h1>

    <div class="container border p-3">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
            {% for userBook in pagination %}
                {% set book = userBook.book %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <a href="{{ path('book_show', {'id': book.id, 'fromList': 1}) }}">
                            <img src="{{ book.coverImage }}" class="card-img-top book-cover mt-2" alt="{{ book.title }}">
                        </a>
                        <div class="card-body p-2">
                            <h6 class="card-title text-truncate" title="{{ book.title }}">{{ book.title }}</h6>
                            <p class="card-text small mb-2 text-muted">{{ book.author }}</p>
                        </div>
                        <div class="card-footer text-center">
                            {% if userBook.status == 'finished' %}
                                <button class="btn btn-secondary btn-sm w-100" disabled>Finished</button>
                            {% else %}
                                <a class="btn btn-info btn-sm w-100" href="{{ path('book_edit', {'id': book.id}) }}">Edit Status</a>
                            {% endif %}
                            <form method="post"
                                  action="{{ path('book_remove', {id: book.id}) }}"
                                  style="display:inline;"
                                  data-confirm="Are you sure you want to remove this book from your library?"
                                  data-confirm-title="Remove from Library"
                                  data-confirm-action="remove">
                                <input type="hidden" name="_token" value="{{ csrf_token('remove' ~ book.id) }}">
                                <button class="btn btn-warning btn-sm w-100 mt-1">Remove</button>
                            </form>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>No books found in your library.</p>
            {% endfor %}

        </div>
        {% import 'pagination/pagination_cards.html.twig' as cards %}
        <div class="d-flex justify-content-center mt-4">
            {{ cards.render(pagination) }}
        </div>
    </div>

    <div class="container mt-3 mb-3 d-flex justify-content-between align-items-center">
        <a class="btn btn-primary" href="{{ path('book_new') }}">Create New Book</a>
        <a class="btn btn-secondary" href="{{ path('book_index') }}">See All Books</a>
    </div>
{% endblock %}