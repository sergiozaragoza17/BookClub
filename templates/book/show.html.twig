{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <div class="container text-center" style="border: 1px solid black; border-radius: 10px; padding: 1%">
        <h1>{{ book.title|capitalize }}</h1>
        <hr>

        {% if book.coverImage %}
            <img src="{{ book.coverImage }}" alt="{{ book.title }}" class="img-thumbnail" width="150">
            {#    {% else %}#}
            {#        <img src="/images/default-profile.png" alt="Default Profile" class="img-thumbnail" width="150">#}
        {% endif %}
        <p><strong>Author:</strong> {{ book.author ?? 'Not set' }}</p>
        <p> {{ book.description ?? 'Not set' }}</p>
        <p><strong>Published year:</strong> {{ book.publishedYear ?? 'Not set' }}</p>
        <p><strong>Status:</strong> {{ userBook.status ?? 'Not set' }}</p>
        <p><b>Reviews:</b></p>

        {% if reviews %}

            {% set hasVisibleReviews = false %}

            <div class="row g-3">
                {% for review in reviews %}
                    {% if review.status == 'approved' %}
{#                        <div class="card-body">#}
{#                            <h6 class="card-subtitle mb-2 text-muted">{{ review.user.username ?? 'Anonymous' }}{% if review.status == 'pending' %} (Pending){% endif %}</h6>#}
{#                            <p class="card-text">{{ review.content }}</p>#}
{#                            <div class="d-flex align-items-center mb-2">#}
{#                                {% for i in 1..5 %}#}
{#                                    {% if i <= review.rating %}#}
{#                                        <i class="bi bi-star-fill text-warning"></i>#}
{#                                    {% else %}#}
{#                                        <i class="bi bi-star text-secondary"></i>#}
{#                                    {% endif %}#}
{#                                {% endfor %}#}
{#                            </div>#}
{#                        </div>#}
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">{{ review.user.name ?? 'Anonymous' }}</h6>
                                    <p class="card-text">{{ review.content }}</p>
                                    <div class="d-flex align-items-center mb-2">
                                        {% for i in 1..5 %}
                                            {% if i <= review.rating %}
                                                <i class="bi bi-star-fill text-warning"></i>
                                            {% else %}
                                                <i class="bi bi-star text-secondary"></i>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% set hasVisibleReviews = true %}
                    {% elseif review.status == 'pending' and user.id == review.user.id %}
                        <div class="col-12">
                            <div class="card bg-light text-dark">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">{{ review.user.name ?? 'You' }} (Pending)</h6>
                                    <p class="card-text">{{ review.content }}</p>
                                    <div class="d-flex align-items-center mb-2">
                                        {% for i in 1..5 %}
                                            {% if i <= review.rating %}
                                                <i class="bi bi-star-fill text-warning"></i>
                                            {% else %}
                                                <i class="bi bi-star text-secondary"></i>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% set hasVisibleReviews = true %}
                    {% endif %}
                {% endfor %}
            </div>

            {% if not hasVisibleReviews %}
                <p><b>No reviews yet ...</b></p>
            {% endif %}

        {% else %}
            <p><b>No reviews yet ...</b></p>
        {% endif %}
    </div>
    <div class="container " style="margin-top: 1%;margin-bottom: 1%;">
        <a class="btn btn-info" href="{{ path('book_index') }}">Back to list</a>

        <a class="btn btn-info" href="{{ path('book_edit', {'id': book.id}) }}">Edit</a>
        <a class="btn btn-info" href="{{ path('review_new', {'book': book.id}) }}">Write a review</a>
    </div>


