{% macro render(pagination) %}
    {% set totalPages = pagination.pageCount %}
    {% set current = pagination.currentPageNumber %}
    {% set maxButtons = 5 %}
    {% set startPage = current - 2 %}
    {% set endPage = current + 2 %}

    {% if startPage < 1 %}
        {% set endPage = endPage + (1 - startPage) %}
        {% set startPage = 1 %}
    {% endif %}

    {% if endPage > totalPages %}
        {% set startPage = startPage - (endPage - totalPages) %}
        {% set endPage = totalPages %}
        {% if startPage < 1 %}{% set startPage = 1 %}{% endif %}
    {% endif %}

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            {% if pagination.previousPage is defined %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': pagination.previousPage})) }}">&laquo;</a>
                </li>
            {% endif %}

            {% if startPage > 1 %}
                <li class="page-item disabled"><span class="page-link">…</span></li>
            {% endif %}

            {% for page in startPage..endPage %}
                <li class="page-item {% if page == current %}active{% endif %}">
                    <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': page})) }}">{{ page }}</a>
                </li>
            {% endfor %}

            {% if endPage < totalPages %}
                <li class="page-item disabled"><span class="page-link">…</span></li>
            {% endif %}

            {% if pagination.nextPage is defined %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': pagination.nextPage})) }}">&raquo;</a>
                </li>
            {% endif %}

        </ul>
    </nav>
{% endmacro %}
