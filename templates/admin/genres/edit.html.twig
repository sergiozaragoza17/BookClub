{% extends 'base.html.twig' %}

{% block title %}Create Genre{% endblock %}

{% block body %}
    <h1 class="mt-3 text-center">Edit Genre</h1>

    <div class="container mt-3 p-4 border rounded shadow-sm" style="max-width: 30%">
    {{ form_start(form) }}
        <div class="row p-3 text-center">
            <div class="col-2 mt-2">{{ form_label(form.name) }}</div>
            <div class="col-10">{{ form_widget(form.name, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.name.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>

    </div>
    <div class="container mt-3 mb-3 d-flex justify-content-between align-items-center"  style="max-width: 31%">
            <button class="btn btn-success">Save</button>
        <a class="btn btn-info" href="{{ path('admin_genre_index') }}">back to list</a>
    </div>
    {{ form_end(form) }}
{% endblock %}