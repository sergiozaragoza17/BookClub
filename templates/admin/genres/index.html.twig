{% extends 'base.html.twig' %}

{% block title %}Manage Genres{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-3 text-center">Manage Genres</h1>

        <table class="table table-bordered">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for genre in genres %}
                <tr>
                    <td>{{ genre.id }}</td>
                    <td>{{ genre.name }}</td>
                    <td>
                        <a href="{{ path('admin_genre_edit', {id: genre.id}) }}" class="btn btn-warning ">Edit</a>
                        <form method="post"
                              action="{{ path('admin_genre_delete', {id: genre.id}) }}"
                              style="display:inline;"
                              data-confirm="Are you sure you want to delete this genre?"
                              data-confirm-title="Delete genre"
                              data-confirm-action="delete">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_genre_' ~ genre.id) }}">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">No genres found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="mb-3 text-start">
            <a href="{{ path('admin_genre_new') }}" class="btn btn-primary">+ Add New Genre</a>
        </div>
    </div>
{% endblock %}