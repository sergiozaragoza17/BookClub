{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <h1 class="mt-3 text-center">Edit User</h1>

    <div class="container mt-3 p-4 border rounded shadow-sm">
        {{ form_start(form) }}
        <div class="text-center mb-4">
            <img
                    id="profileImagePreview"
                    src="{{ user.profileImage }}"
                    alt="{{ user.name }}"
                    class="rounded-circle img-thumbnail"
                    style="width: 150px; height: 150px; object-fit: cover; cursor: pointer;"
            >
            {{ form_widget(form.profileImage, {
                attr: { id: 'profileImageInput', style: 'display:none;' }
            }) }}
        </div>
        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.name) }}</div>
            <div class="col-10">{{ form_widget(form.name, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.name.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>
        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.userName) }}</div>
            <div class="col-10">{{ form_widget(form.userName, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.userName.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>
        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.email) }}</div>
            <div class="col-10">{{ form_widget(form.email, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.email.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>
        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.bio) }}</div>
            <div class="col-10">{{ form_widget(form.bio, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.bio.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>
        {% if 'ROLE_ADMIN' not in user.roles %}
            <div class="row p-3 text-center">
                <div class="col-2">{{ form_label(form.favBook) }}</div>
                <div class="col-10">{{ form_widget(form.favBook, { attr: { class: 'form-control' } }) }}</div>
                {% for error in form.favBook.vars.errors %}
                    <div class="col-12 text-danger">{{ error.message }}</div>
                {% endfor %}
            </div>
            <div class="row p-3 text-center">
                <div class="col-2">{{ form_label(form.currentlyReading) }}</div>
                <div class="col-10">{{ form_widget(form.currentlyReading, { attr: { class: 'form-control' } }) }}</div>
                {% for error in form.currentlyReading.vars.errors %}
                    <div class="col-12 text-danger">{{ error.message }}</div>
                {% endfor %}
            </div>
            <div class="row p-3 text-center">
                <div class="col-2">{{ form_label(form.favGenres) }}</div>
                <div class="col-10">
                    {% for child in form.favGenres %}
                        <div class="form-check form-check-inline">
                            {{ form_widget(child, { attr: { class: 'form-check-input' } }) }}
                            {{ form_label(child, null, { attr: { class: 'form-check-label' } }) }}
                        </div>
                    {% endfor %}
                </div>
                {% for error in form.favGenres.vars.errors %}
                    <div class="col-12 text-danger">{{ error.message }}</div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="container mb-3 d-flex justify-content-between align-items-center mt-3">
        <button class="btn btn-success">Save changes</button>
        <a class="btn btn-info" href="{{ path('admin_users') }}">Back to profile</a>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const container = document.querySelector('.text-center.mb-4');
            const input = container.querySelector('input[type="file"]');
            const preview = document.getElementById('profileImagePreview');

            if(input && preview) {
                preview.addEventListener('click', () => input.click());

                input.addEventListener('change', function() {
                    if (input.files && input.files[0]) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            preview.src = e.target.result;
                        }
                        reader.readAsDataURL(input.files[0]);
                    }
                });
            }
        });
    </script>
{% endblock %}