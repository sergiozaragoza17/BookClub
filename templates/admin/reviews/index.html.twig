{% extends 'base.html.twig' %}

{% block title %}Manage Reviews{% endblock %}

{% block body %}
    <h1>Manage Reviews</h1>
    <form method="get" class="mb-3">
        <label for="statusFilter">Filter by status:</label>
        <select name="status" id="statusFilter" onchange="this.form.submit()" class="form-select w-auto d-inline-block">
            <option value="all" {% if currentStatus == 'all' %}selected{% endif %}>All</option>
            <option value="pending" {% if currentStatus == 'pending' %}selected{% endif %}>Pending</option>
            <option value="approved" {% if currentStatus == 'approved' %}selected{% endif %}>Approved</option>
            <option value="rejected" {% if currentStatus == 'rejected' %}selected{% endif %}>Rejected</option>
        </select>
    </form>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Book</th>
            <th>User</th>
            <th>Rating</th>
            <th>Content</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.book.title }}</td>
                <td>{{ review.user.name }}</td>
                <td>{{ review.rating }}</td>
                <td>{{ review.content|slice(0, 50) ~ '...' }}</td>
                <td>{{ review.status }}</td>
                <td>
                    <a href="{{ path('admin_review_show', {id: review.id}) }}">View</a>

                    {% if review.status != 'approved' %}
                        <a href="{{ path('admin_review_approve', {id: review.id}) }}">Approve</a>
                        {% if review.status != 'rejected' %}
                            <a href="{{ path('admin_review_reject', {id: review.id}) }}">Reject</a>
                        {% endif %}
                    {% endif %}
                    <a href="{{ path('admin_review_edit', {id: review.id}) }}">Edit</a>
                    <form method="post" action="{{ path('admin_review_delete', {id: review.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                        <button>Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No reviews found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}