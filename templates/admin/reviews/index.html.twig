{% extends 'base.html.twig' %}

{% block title %}Manage Reviews{% endblock %}

{% block body %}
    <h1>Manage Reviews</h1>
    <form method="get" class="mb-3">
        <label for="statusFilter">Filter by status:</label>
        <select name="status" id="statusFilter" onchange="this.form.submit()" class="form-select w-auto d-inline-block">
            <option value="all" {% if currentStatus == 'all' %}selected{% endif %}>All</option>
            <option value="pending" {% if currentStatus == 'pending' %}selected{% endif %}>Pending</option>
            <option value="approved" {% if currentStatus == 'approved' %}selected{% endif %}>Approved</option>
            <option value="rejected" {% if currentStatus == 'rejected' %}selected{% endif %}>Rejected</option>
        </select>
    </form>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Book</th>
            <th>User</th>
            <th>Rating</th>
            <th>Content</th>
            <th>Status</th>
            <th>Edited</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.book.title }}</td>
                <td>{{ review.user.name }}</td>
                <td>{{ review.rating }}</td>
                <td>{{ review.content|slice(0, 50) ~ '...' }}</td>
                <td>{{ review.status }}</td>
                <td>{{ review.edited ? 'Edited' : 'Not Edited' }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('admin_review_show', {id: review.id}) }}">View</a>

                    {% if review.status == 'pending' %}
                        <form method="post" action="{{ path('admin_review_approve', {id: review.id}) }}" style="display:inline">
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                        <form method="post" action="{{ path('admin_review_reject', {id: review.id}) }}" class="d-inline">
                            <button type="submit" class="btn btn-warning ">Reject</button>
                        </form>
                    {% elseif review.status == 'approved' %}
                        <form method="post" action="{{ path('admin_review_reject', {id: review.id}) }}" class="d-inline">
                            <button type="submit" class="btn btn-warning ">Reject</button>
                        </form>
                    {% elseif review.status == 'rejected' %}
                        <form method="post" action="{{ path('admin_review_approve', {id: review.id}) }}" style="display:inline">
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                    {% endif %}
                    <form method="post"
                          action="{{ path('admin_review_delete', {id: review.id}) }}"
                          style="display:inline;"
                          data-confirm="Are you sure you want to delete this review?"
                          data-confirm-title="Delete Review">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No reviews found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}