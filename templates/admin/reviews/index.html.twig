{% extends 'base.html.twig' %}

{% block title %}Manage Reviews{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-3 text-center">Manage Reviews</h1>
        <form method="get" class="mb-3">
            <label for="statusFilter">Filter by status:</label>
            <select name="status" id="statusFilter" onchange="this.form.submit()" class="form-select w-auto d-inline-block">
                <option value="all" {% if currentStatus == 'all' %}selected{% endif %}>All</option>
                <option value="pending" {% if currentStatus == 'pending' %}selected{% endif %}>Pending</option>
                <option value="approved" {% if currentStatus == 'approved' %}selected{% endif %}>Approved</option>
                <option value="rejected" {% if currentStatus == 'rejected' %}selected{% endif %}>Rejected</option>
            </select>
        </form>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>ID</th>
                <th>Book</th>
                <th>User</th>
                <th>Rating</th>
                <th>Content</th>
                <th>Status</th>
                <th>Edited</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for review in reviews %}
                <tr>
                    <td>{{ review.id }}</td>
                    <td class="text-truncate" style="max-width: 120px;" title="{{ review.book.title }}">{{ review.book.title }}</td>
                    <td>{{ review.user.userName }}</td>
                    <td>{{ review.rating }}</td>
                    <td class="text-truncate" style="max-width: 250px;" title="{{ review.content }}">{{ review.content|slice(0, 50) ~ '...' }}</td>
                    <td>{{ review.status }}</td>
                    <td>{{ review.edited ? 'Edited' : 'Not Edited' }}</td>
                    <td class="text-nowrap">
{#                        <a class="btn btn-info btn-sm mb-1" href="{{ path('admin_review_show', {id: review.id}) }}">View</a>#}
                        <button class="btn btn-info btn-sm mb-1"
                           data-bs-toggle="modal"
                           data-bs-target="#reviewModal{{ review.id }}">
                            View
                        </button>
                        {% if review.status == 'pending' %}
                            <form method="post" action="{{ path('admin_review_approve', {id: review.id, status:currentStatus}) }}" style="display:inline">
                                <button type="submit" class="btn btn-success btn-sm mb-1">Approve</button>
                            </form>
                            <form method="post" action="{{ path('admin_review_reject', {id: review.id, status:currentStatus}) }}" style="display:inline">
                                <button type="submit" class="btn btn-warning btn-sm mb-1">Reject</button>
                            </form>
                        {% elseif review.status == 'approved' %}
                            <form method="post" action="{{ path('admin_review_reject', {id: review.id, status:currentStatus}) }}" style="display:inline">
                                <button type="submit" class="btn btn-warning btn-sm mb-1">Reject</button>
                            </form>
                        {% elseif review.status == 'rejected' %}
                            <form method="post" action="{{ path('admin_review_approve', {id: review.id, status:currentStatus}) }}" style="display:inline">
                                <button type="submit" class="btn btn-success btn-sm mb-1">Approve</button>
                            </form>
                        {% endif %}
                        <form method="post"
                              action="{{ path('admin_review_delete', {id: review.id, status:currentStatus}) }}"
                              style="display:inline;"
                              data-confirm="Are you sure you want to delete this review?"
                              data-confirm-title="Delete Review"
                              data-confirm-action="delete">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                            <button class="btn btn-danger btn-sm mb-1">Delete</button>
                        </form>
                    </td>
                </tr>
                <div class="modal fade" id="reviewModal{{ review.id }}" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Review #{{ review.id }} - {{ review.book.title }}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row mb-2 text-center">
                                    <div class="col">
                                        <strong>User:</strong> {{ review.user.userName }}
                                    </div>
                                    <div class="col">
                                        <strong>Status:</strong>
                                        {% if review.status == 'approved' %}
                                            <span class="badge bg-success">Approved</span>
                                        {% elseif review.status == 'pending' %}
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        {% elseif review.status == 'rejected' %}
                                            <span class="badge bg-danger">Rejected</span>
                                        {% endif %}
                                    </div>
                                    <div class="col">
                                        <strong>Edited:</strong>
                                        {% if review.edited %}
                                            <span class="badge bg-info text-dark">Edited</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Not Edited</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <hr>
                                <p>{{ review.content }}</p>
                                <div class="mb-2">
                                    {% for i in 1..5 %}
                                        {% if i <= review.rating %}
                                            <i class="bi bi-star-fill text-warning"></i>
                                        {% else %}
                                            <i class="bi bi-star text-secondary"></i>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="modal-footer">
                                {% if review.status == 'pending' %}
                                    <form method="post" action="{{ path('admin_review_approve', {id: review.id, status:currentStatus}) }}" style="display:inline">
                                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                    </form>
                                    <form method="post" action="{{ path('admin_review_reject', {id: review.id, status:currentStatus}) }}" style="display:inline">
                                        <button type="submit" class="btn btn-warning btn-sm">Reject</button>
                                    </form>
                                {% elseif review.status == 'approved' %}
                                    <form method="post" action="{{ path('admin_review_reject', {id: review.id, status:currentStatus}) }}" style="display:inline">
                                        <button type="submit" class="btn btn-warning btn-sm">Reject</button>
                                    </form>
                                {% elseif review.status == 'rejected' %}
                                    <form method="post" action="{{ path('admin_review_approve', {id: review.id, status:currentStatus}) }}" style="display:inline">
                                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                    </form>
                                {% endif %}
                                <form method="post"
                                      action="{{ path('admin_review_delete', {id: review.id, status:currentStatus}) }}"
                                      style="display:inline;"
                                      data-confirm="Are you sure you want to delete this review?"
                                      data-confirm-title="Delete Review"
                                      data-confirm-action="delete">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                                    <button class="btn btn-danger btn-sm">Delete</button>
                                </form>
                                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

            {% else %}
                <tr>
                    <td colspan="8">No reviews found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="d-flex justify-content-center mt-3">
            {% import 'pagination/pagination_cards.html.twig' as cards %}
            {{ cards.render(reviews) }}
        </div>
    </div>

{% endblock %}