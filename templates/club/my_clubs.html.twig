{% extends 'base.html.twig' %}

{% block title %}My Clubs{% endblock %}

{% block body %}
    <h1 class="mb-4">My Clubs</h1>

    {% if pagination is empty %}
        <p>You haven't joined any clubs yet.</p>
    {% else %}
        <div class="row">
            {% for club in pagination %}
                <div class="col-md-4 mb-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('club_show', {id: club.id}) }}" class="text-decoration-none">
                                    {{ club.name }}
                                </a>
                                {% if club.members.contains(app.user) %}
                                    <span class="badge bg-success">Member</span>
                                {% endif %}
                            </h5>
                            <p class="card-text text-muted">
                                {{ club.description|length > 100 ? club.description|slice(0, 100) ~ '...' : club.description }}
                            </p>

                            <form method="post" action="{{ path('club_leave', {id: club.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('leave' ~ club.id) }}">
                                <button class="btn btn-danger btn-sm w-100">Leave Club</button>
                            </form>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination, 'pagination/pagination_cards.html.twig') }}
        </div>
    {% endif %}

    <div class="d-flex gap-2 mt-3">
        <a class="btn btn-primary" href="{{ path('club_new') }}">Create New Club</a>
        <a class="btn btn-secondary" href="{{ path('club_index') }}">See All Clubs</a>
    </div>
{% endblock %}