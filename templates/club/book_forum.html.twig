{% extends 'base.html.twig' %}
{% block body %}
<h1 class="mt-3 text-center">{{ club.name }} - {{ book.title }} - Forum</h1>
<div class="container p-5 mt-5 border">
    <div class="mb-4">
        {{ form_start(form) }}
        {{ form_row(form.content) }}
        <button class="btn btn-primary mt-3">Post</button>
        {{ form_end(form) }}
    </div>
    <hr>
    <div class="forum-posts">
        {% for post in posts %}
            <div class="card mb-2">
                <div class="card-body">
                    <p>{{ post.content }}</p>
                    <small>By {{ post.user.userName ?? 'Anonymous' }} on {{ post.created|date('Y-m-d H:i') }}</small>

                    {% if app.user != post.user %}
                        <button class="btn btn-outline-primary btn-sm mt-2"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#replyForm{{ post.id }}"
                                aria-expanded="false"
                                aria-controls="replyForm{{ post.id }}">
                            Reply
                        </button>
                        <div class="collapse mt-2" id="replyForm{{ post.id }}">
                            {{ form_start(replyForms[post.id], {'action': path('club_book_forum', {'club': club.id, 'book':book.id})}) }}
                            <input type="hidden" name="parent_id" value="{{ post.id }}">
                            {{ form_row(replyForms[post.id].content) }}
                            <button class="btn btn-secondary btn-sm mt-3">Reply</button>
                            {{ form_end(replyForms[post.id]) }}
                        </div>
                    {% endif %}

                    {% for reply in post.replies %}
                        <div class="card mt-2 ms-4">
                            <div class="card-body">
                                <p>{{ reply.content }}</p>
                                <small>By {{ reply.user.userName ?? 'Anonymous' }} on {{ reply.created|date('Y-m-d H:i') }}</small>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <p>No posts yet...</p>
        {% endfor %}
    </div>
</div>
    <div class="container mt-3 mb-3 d-flex justify-content-between align-items-center">
    <a class="btn btn-info" href="{{ path('club_show',{'id': club.id}) }}">back to club</a>
    </div>
{% endblock %}