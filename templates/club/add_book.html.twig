{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="mt-3 text-center">Add a book to {{ club.name }}</h1>
    <div class="container mt-3 p-3 border">
    {{ form_start(form) }}
        <div class="row p-3 text-center">
            <div class="col-2">{{ form_label(form.book) }}</div>
            <div class="col-10">{{ form_widget(form.book, { attr: { class: 'form-control' } }) }}</div>
            {% for error in form.book.vars.errors %}
                <div class="col-12 text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>
    <button class="btn btn-primary">Add Book</button>
    {{ form_end(form) }}
    </div>
    <a class="btn btn-secondary mt-3 ms-5" href="{{ path('club_show', {'id': club.id}) }}">Back to club</a>
{% endblock %}