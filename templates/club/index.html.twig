{% extends 'base.html.twig' %}

{% block title %}Clubs{% endblock %}

{% block body %}
    <h1 class="mb-4 mt-3 text-center">Clubs</h1>

<div class="container border">
    <div class="row mt-3">
        {% for club in pagination %}
            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('club_show', {id: club.id}) }}" class="text-decoration-none">
                                {{ club.name }}
                            </a>
                            {% if club.members.contains(app.user) %}
                                <span class="badge bg-success">Member</span>
                            {% endif %}
                        </h5>
                        <p class="card-text text-muted">
                            {{ club.description|length > 100 ? club.description|slice(0, 100) ~ '...' : club.description }}
                        </p>

                        {% if app.user and not is_granted('ROLE_ADMIN') %}
                            {% if club.members.contains(app.user) %}
                                <form method="post" action="{{ path('club_leave', {id: club.id}) }}" class="mt-2">
                                    <input type="hidden" name="_token" value="{{ csrf_token('leave' ~ club.id) }}">
                                    <button class="btn btn-danger btn-sm w-100">Leave Club</button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('club_join', {id: club.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('join' ~ club.id) }}">
                                    <button class="btn btn-primary btn-sm w-100">Join Club</button>
                                </form>
                            {% endif %}
                        {% endif %}

                        {% if club.createdBy == app.user or is_granted('ROLE_ADMIN') %}
                            <div class="mt-2 d-flex justify-content-between">
                                <a href="{{ path('club_edit', {'id': club.id}) }}" class="btn btn-info">Edit</a>
                                {{ include('club/_delete_form.html.twig') }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <p>No clubs available yet.</p>
        {% endfor %}
    </div>
    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(pagination, 'pagination/pagination_cards.html.twig') }}
    </div>
</div>
<div class="d-flex justify-content-between align-items-center mb-3">
    <a class="btn btn-primary ms-3 mt-3 " href="{{ path('club_new') }}">Create New Club</a>
</div>
{% endblock %}